<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:padding="8dp"
        />
    <Button
        android:id="@+id/play_offline_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY OFFLINE"
        android:layout_margin="8dp"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/create_online_game_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create online"
        android:layout_margin="8dp"
        android:padding="8dp"
        />

    <EditText
        android:id="@+id/create_game_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:inputType="number"
        android:hint="Enter Game Id"/>

    <Button
        android:id="@+id/join_online_game_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join online"
        android:layout_margin="8dp"
        android:padding="8dp"
        />

</LinearLayout>